{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/",
    "noResolve": false,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "lib": ["es7", "es2015", "dom"],
    "types": ["node"]
  },
  "include": [
    "./src/**/*"
  ]
}